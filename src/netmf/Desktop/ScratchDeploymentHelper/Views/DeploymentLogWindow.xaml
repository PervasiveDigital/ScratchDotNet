<Window x:Class="PervasiveDigital.Scratch.DeploymentHelper.Views.DeploymentLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeploymentLogWindow" Height="400" Width="600" Icon="/ScratchDeploymentHelper;component/Assets/Images/S4NLogo-240.png">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Background="White">
            <Button HorizontalAlignment="Right" Padding="10,5,10,5" Margin="10" Click="Close_Click">Close</Button>
        </Grid>
        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1">
            <TextBox x:Name="logText" Margin="10,0,10,0" IsReadOnly="True" AcceptsReturn="True" />
        </Border>
    </DockPanel>
</Window>
