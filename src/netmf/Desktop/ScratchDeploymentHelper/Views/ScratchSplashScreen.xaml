<Window x:Class="PervasiveDigital.Scratch.DeploymentHelper.Views.ScratchSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Height="200" Width="250" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" WindowState="Normal" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Margin="20,15,20,10" Height="120" HorizontalAlignment="Center" Source="/ScratchDeploymentHelper;component/Assets/Images/S4NLogo-480.png" />
        
        <TextBlock Grid.Row="1" Margin="20,20,20,10" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding Activity}" Style="{StaticResource DeviceTitleStyle}" />
    </Grid>
</Window>
